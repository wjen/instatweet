<%= form_for(@tweet) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Tweet away", rows: 10, class: "form-control textarea" %>
  </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
    <span class="picture">
      <%= f.file_field :picture, accept: "image/jpeg, image/gif, image.png" %>
    </span>
<% end %>
